<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="gtk-custom-theme" _name="Custom-Theme" version="1.0">
  <author>Richard Loveless III</author>
  <_description>Generated by wal (template by: Richard Loveless III)</_description>

  <!-- Palette -->
  <color name="color0"                      value="{color0}"/>
  <color name="color1"                      value="{color1}"/>
  <color name="color2"                      value="{color2}"/>
  <color name="color3"                      value="{color3}"/>
  <color name="color4"                      value="{color4}"/>
  <color name="color5"                      value="{color5}"/>
  <color name="color6"                      value="{color6}"/>
  <color name="color7"                      value="{color7}"/>
  <color name="color8"                      value="{color8}"/>	

  <!-- Global Settings -->
  <style name="current-line"                background="color0"/>
  <style name="current-line-number"         background="color0"/>
  <style name="draw-spaces"                 foreground="color8"/>
  <style name="background-pattern"          background="color8"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="color7" background="color1"/>
  <style name="bracket-mismatch"            foreground="color8" background="color0"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="color0" background="color0"/>

  <!-- Search Matching -->
  <style name="search-match"                background="color7"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="color4"/>
  <style name="def:shebang"                 foreground="color4" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="color5"/>
  <style name="def:special-char"            foreground="color6"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="color7"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="color1" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="color2" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="color3"/>
  <style name="def:error"                   background="color4" bold="true"/>
  <style name="def:warning"                 background="color5"/>
  <style name="def:note"                    foreground="color7" background="color0" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->

  <!-- Language specific styles -->
  <style name="diff:added-line"             foreground="#008B8B"/>
  <style name="diff:removed-line"           foreground="#6A5ACD"/>
  <style name="diff:changed-line"           use-style="def:preprocessor"/>
  <style name="diff:special-case"           use-style="def:constant"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:diff-file"              use-style="def:type"/>

  <style name="xml:tags"                    foreground="color6"/>
  <style name="xml:attribute-name"          foreground="color2"/>
  <style name="xml:namespace"               foreground="color1" bold="true"/>

  <style name="js:object"                   foreground="#2E8B57" bold="true"/>
  <style name="js:constructors"             foreground="#008B8B"/>

  <style name="latex:display-math"          foreground="#6A5ACD"/>
  <style name="latex:command"               foreground="#2E8B57" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

  <style name="sh:variable"                 foreground="#6A5ACD"/>

  <!-- legacy styles for old lang files -->
  <style name="Others"                      foreground="#2E8B57" bold="true"/>
  <style name="Others 2"                    foreground="#008B8B"/>
  <style name="Others 3"                    foreground="#6A5ACD"/>

</style-scheme>
